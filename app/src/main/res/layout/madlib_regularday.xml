<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#734C95"
    android:backgroundTint="#D8BEF3"
    tools:context=".MadLibRegularDayActivity">

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Your own story"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6515B5"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Name"
            android:inputType="text"
            android:textColor="#7C2D2D" />

        <EditText
            android:id="@+id/tv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6515B4"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Color"
            android:inputType="text" />

        <EditText
            android:id="@+id/tv_noun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6515B4"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Noun"
            android:inputType="text" />

        <EditText
            android:id="@+id/tv_adjective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6515B2"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Adjective"
            android:inputType="text" />

        <EditText
            android:id="@+id/tv_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6515B3"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Day of the week"
            android:inputType="text" />

        <EditText
            android:id="@+id/tv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6515B3"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Item"
            android:inputType="text" />

        <EditText
            android:id="@+id/tv_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6515B2"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="word"
            android:inputType="text" />

        <EditText
            android:id="@+id/tv_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6515B2"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="random"
            android:inputType="text" />


        <Button
            android:id="@+id/btn_generate"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="140dp"
            android:fontFamily="cursive"
            android:text="Generate"
            android:textColor="#C1B6DA"
            android:textSize="34sp"
            app:strokeColor="#100F0F" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>